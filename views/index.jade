extends wraper

block titulo
	| #{title}

block content
	if (!isLogged)
		h1 #{title}
	else
		h1 #{title}, #{username}!!
		form(action="/logout")
			input(type='submit' value='Logout').btn.btn-lg.btn-primary.btn-block
		a(href='/account').btn.btn-lg.btn-primary.btn-block Check Account
	if (!isLogged)
		block loginForm
			+loginForm(estrategia) 

